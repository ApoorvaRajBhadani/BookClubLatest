<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tec"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="39dp"
        android:text="Issue Date" />

    <TextView
        android:id="@+id/p_issue_date"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:text="23-10-2000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/p_return_date"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/p_issue_date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:text="13-11-2000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/p_penalty"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="239dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Penalty"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cwdjkc"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:text="Return Date" />

    <TextView
        android:id="@+id/p_book_name"
        android:layout_width="237dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="Book Name"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>